    <modelVersion>4.0.0</modelVersion>

    <artifactId>hsweb-platform-run</artifactId>

    <!--配置信息-->
    <properties>
        <app.name>hsweb-platform</app.name>
        <app.version>${project.parent.version}</app.version>
    </properties>

    <!--环境配置-->
